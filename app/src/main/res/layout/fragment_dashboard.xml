<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondaryVariant">

    <LinearLayout
        android:id="@+id/linearLayoutDashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/best_texts"
            android:textSize="30sp"
            android:textColor="?attr/textAppearanceHeadline1"
            android:layout_margin="2dp"
            android:paddingVertical="5dp"
            android:background="@drawable/item_bests_border"
            android:gravity="center"
            android:textStyle="italic" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewBest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/list_best_item" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>